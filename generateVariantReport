}else{
    dnm.sheet <- createSheet(outwb, sheetName = "pDNM")
    hem.sheet <- createSheet(outwb, sheetName = "pHEM")
    hom.sheet <- createSheet(outwb, sheetName = "pHOM")
    chet.sheet <- createSheet(outwb, sheetName = "pCHET")
